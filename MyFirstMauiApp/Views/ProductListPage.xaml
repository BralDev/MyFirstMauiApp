<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MyFirstMauiApp.ViewModels"
             xmlns:models="clr-namespace:MyFirstMauiApp.Models"
             x:Class="MyFirstMauiApp.Views.ProductListPage"
             Title="Inventario BralDev">

    <ContentPage.BindingContext>
        <viewmodels:ProductListViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="*, Auto">
        <RefreshView IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding LoadProductsCommand}">
            <CollectionView ItemsSource="{Binding Products}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Product">
                        <Frame Margin="10,5" Padding="15" CornerRadius="10" HasShadow="True">
                            <HorizontalStackLayout Spacing="15">
                                <VerticalStackLayout VerticalOptions="Center">
                                    <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold" />
                                    <Label Text="{Binding Description}" FontSize="14" TextColor="Gray" />
                                </VerticalStackLayout>

                                <VerticalStackLayout HorizontalOptions="EndAndExpand" VerticalOptions="Center">
                                    <Label Text="{Binding Price, StringFormat='S/ {0:F2}'}" FontAttributes="Bold" HorizontalOptions="End" />
                                    <Label Text="{Binding Stock, StringFormat='Stock: {0}'}" FontSize="12" HorizontalOptions="End" />
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <Button Grid.Row="1"
                Text="+ Nuevo Producto"
                Clicked="OnAddProductClicked"
                Margin="20"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="25"
                HeightRequest="50" />
    </Grid>
</ContentPage>